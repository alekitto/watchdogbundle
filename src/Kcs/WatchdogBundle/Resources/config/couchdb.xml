<?xml version="1.0" encoding="UTF-8"?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="watchdog.couch" factory-service="doctrine_couchdb" factory-method="getManager" class="Doctrine\ODM\CouchDB\DocumentManager" public="false">
            <argument>%kcs_watchdog.document_manager%</argument>
        </service>

        <service id="watchdog.storage" class="Kcs\WatchdogBundle\Storage\CouchDB" public="false">
            <argument type="service" id="watchdog.couch" />
        </service>
    </services>
</container>
