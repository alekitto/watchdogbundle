<?xml version="1.0" encoding="UTF-8"?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="watchdog" class="Kcs\WatchdogBundle\EventListener\ExceptionListener">
            <argument type="service" id="security.context" />
            <argument type="service" id="watchdog.storage" />
            <argument>%kernel.debug%</argument>
            <argument>%kcs_watchdog.allowed_exceptions%</argument>
            <tag name="kernel.event_listener" event="kernel.exception" method="onKernelException" />
        </service>

        <service id="watchdog_error_logger" class="Kcs\WatchdogBundle\Debug\ErrorHandler">
            <argument type="service" id="security.context" />
            <argument type="service" id="watchdog.storage" />
            <argument>%kernel.debug%</argument>
            <argument>%kcs_watchdog.error_reporting_level%</argument>
            <tag name="kernel.event_subscriber" />
            <argument>%kcs_watchdog.ignored_errors_path%</argument>
        </service>
    </services>

</container>
